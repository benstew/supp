<p id="notice"><%= notice %></p>

<div class="container">
  <div class="container">
    <h2>Categories</h2>
    <p>Some Content to explain stuff</p>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Index</th>
          <th>Goal</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.id %></a></td>
            <td><a href="<%=category_path(category) %>"><%= category.name %></a></td>

            <td>
            <div class="category-description" >
              <a href="<%=category_path(category) %>"><%= category.description %></a>
            </div>
            </td>


            <td>
            <div class="edit-category-toggle" style="display:none">
              <%= render 'edit_description', category: category %>
            </div>
            </td>

            <td><button type="button" class="btn btn-success btn-sm edit-category-description" ><%= link_to 'Edit Description', new_category_path %> </button></td>
            <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>

          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="container">
    <div class="container new_category_click">
        <button type="button" class="btn btn-success btn-sm btn-custom" ><%= link_to 'New Category', new_category_path %> </button>
    </div>
    <div class="container back_category_click" style="display:none">
        <button type="button" class="btn btn-success btn-sm btn-custom" >Back</button>
    </div>

    <div class="row">
      <div class="new_category_form col-md-8" style="display:none">
        <%= render 'form' %>
      </div>
    </div>

  </div>

</div>
