<p id="notice"><%= notice %></p>


<div class="container">
  <div class="container">
    <h2>All Categories</h2>
    <p>Some Content to explain stuff</p>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Index</th>
          <th>Goal</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.id %></a></td>
            <td><a href="<%=category_path(category) %>"><%= category.name %></a></td>
            <td><a href="<%=category_path(category) %>"><%= category.description %></a></td>
              <!--
            <td><%= link_to 'Edit', edit_category_path(category) %></td>
            <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            -->
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="Container">
    <div class="new-button">
      <button type="button" class="btn btn-primary btn-sm" ><%= link_to 'New Category', new_category_path %> </button>
    </div>
  </div>
</div>
