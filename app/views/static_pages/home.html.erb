<div class="container">
  <div class="popular">
    <h2>Recent Goals</h2>
    <p>People are currently purchasing produts based on the below goals</p>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Date Created</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @recent_goals.each do |goal| %>
          <tr>
            <td><%= goal.name %></td>
            <td><%= goal.description %></td>
            <td><%= goal.created_at.strftime("%m-%d-%Y") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

