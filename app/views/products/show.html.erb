<p id="notice"><%= notice %></p>

<h1><%= @product.name %></h1>

<div class="container">
  <div class="col-md-4">
    <%= image_tag @product.image.url(:medium) %>
  </div>
  <div class="col-md-8">
    <p>
      <strong>Description:</strong>
      <%= @product.description %>
    </p>
    <p>
      <strong>Price:</strong>
      <%= @product.price %>
    </p>
    <p>
      <strong>Serving size:</strong>
      <%= @product.serving_size %>
    </p>
    <p>
      <strong>Size:</strong>
      <%= @product.product_size %>
    </p>
    <p>
      <strong>Family:</strong>
      <%= @product.family %>
    </p>
    <p>
      <strong>Goal:</strong>
      <%= @product.goal_id %>
    </p>
    <p>
      <%= link_to 'Edit', edit_product_path(@product) %> |
      <%= link_to 'Back', products_path %>
    </p>
  </div>
</div>

<br>
<br>
<div class="container">
  <h3>Ingredients</h3>
  <p>See what's in your product</p>
  <ol>
    <table class="table table-striped">
      <thead>
        <tr>
            <th></th>
            <th>Ingredient</th>
            <th>Description</th>
            <th>Location Made</th>
            <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @ingredients.each do |ingredient| %>
          <tr>
            <td><li></li> </td>
            <td><%= ingredient.name %></td>
            <td><%= ingredient.description %></td>
            <td><%= ingredient.location_made %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </ol>

</div>
