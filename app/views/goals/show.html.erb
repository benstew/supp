<p id="notice"><%= notice %></p>

<div class="container">
  <h1><%= @goal.name %></h1>
  <p>
    <strong>Description:</strong>
    <%= @goal.description %>
  </p>
</div>
<div class="container">
  <%= link_to 'Edit', edit_category_goal_path(@goal.category_id, @goal) %> |
  <%= link_to 'Back', goals_path %>
</div>
<br>
<br>

<div class="container">
  <h3>Products</h3>
  <p>Some explanation about the products</p>
  <table class="table table-striped">
    <thead>
      <tr>
          <th></th>
          <th>Name</th>
          <th>Description</th>
          <th>Price</th>
          <th>Servings</th>
          <th>Size</th>
          <th>Family</th>
          <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @goal.products.each do |product| %>
      <% goal =  Goal.find_by(id: product.goal_id) %>
        <tr>
          <td><div class="thumbnail-image"> <%= image_tag product.image.url(:thumb) %></div></td>
          <td><a href="<%=product_path(product) %>"><%= product.name %></a></td>
          <td><a href="<%=product_path(product) %>"><%= product.description %></td>
          <td><%= product.price %></td>
          <td><%= product.serving_size %></td>
          <td><%= product.product_size %></td>
          <td><%= product.family %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
