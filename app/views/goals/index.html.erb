<p id="notice"><%= notice %></p>

<h1>Listing Goals</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @goals.each do |goal| %>
      <tr>
        <td><%= goal.name %></td>
        <td><%= goal.description %></td>
        <td><%= link_to 'Show', category_goal_path(goal.category_id, goal) %></td>
        <td><%= link_to 'Edit', edit_category_goal_path(goal.category_id, goal) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


